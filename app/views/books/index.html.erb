
<h1>All Books: </h1>


<% @books.each do |book| %>
    
        <h4><%= link_to book.title, book %></h4> -
        <p>Author: <%= book.author %></p> -
        <p>Year published: <%= book.year_published %></p> -
        <p><%= link_to "Delete?", book_path(book), method: :delete, data: { confirm: "Are you sure?"} %></p>
        

<% end %>        